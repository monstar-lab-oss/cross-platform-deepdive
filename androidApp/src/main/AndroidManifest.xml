<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.ephelsa.okmoviesplace.android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".OkMoviesPlaceApplication"
        android:allowBackup="false"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/OKMoviesPlaceTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.screen.movies.MoviesActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="screen.movies" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.screen.favorites.FavoritesActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="screen.favorites" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>
</manifest> 