<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Keratin">
        <!-- Base style - does not require any attributes -->
    </style>
    <style name="Keratin.Theme" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/slimy_green</item>
        <item name="colorOnPrimary">@color/nyanza</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/tumbleweed</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_purple</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/nyanza</item>
        <item name="colorOnSurface">@color/nyanza_dark</item>
        <item name="colorError">@color/black_coral</item>
        <item name="android:windowBackground">?attr/colorSurface</item>
        <item name="materialCardViewStyle">@style/Keratin.CardView</item>
    </style>
    <style name="Keratin.Star">
        <item name="android:importantForAccessibility">no</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:src">@drawable/ic_round_star</item>
        <item name="tint">?attr/colorSecondary</item>
    </style>
    <style name="Keratin.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/colorSecondary</item>
    </style>

    <style name="Keratin.TextAppearance">
        <!-- Base text style - does not require any attributes -->
    </style>
    <!-- This SearchText style should replace Lapism's MaterialSearchTextAppearance -->
    <style name="Keratin.TextAppearance.SearchText" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:textColorHint">?colorOnSurfaceVariant</item>
        <item name="android:letterSpacing">0.0</item>
    </style>
</resources>