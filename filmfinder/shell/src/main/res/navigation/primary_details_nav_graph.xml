<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/movie_list_fragment"
    >

    <fragment
        android:id="@+id/movie_list_fragment"
        android:name="com.cliabhach.terrapin.red.shell.details.MovieListFragment"
        android:label="MovieListFragment"
        >
        <argument
            android:name="terrapin:search_term"
            android:defaultValue=""
            app:argType="string"
            />
        <argument
            android:name="terrapin:movie_id"
            android:defaultValue="-1"
            app:argType="integer"
            />
        <action
            android:id="@+id/show_movie_detail"
            app:destination="@id/movie_detail_fragment"
            >
            <argument
                android:name="terrapin:movie_id"
                android:defaultValue="-1"
                app:argType="integer"
                />
        </action>
    </fragment>
    <fragment
        android:id="@+id/movie_detail_fragment"
        android:name="com.cliabhach.terrapin.red.shell.details.MovieFragment"
        android:label="movie_detail"
        tools:layout="@layout/movie_details_fragment"
        >
        <argument
            android:name="terrapin:movie_id"
            android:defaultValue="-1"
            app:argType="integer"
            />
    </fragment>
</navigation>